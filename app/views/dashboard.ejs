<!DOCTYPE html>
<html>
    <head>
        <title>Sound Sport Surfaces</title>
        <script type="text/javascript" src="/lib/angular/angular.js"></script>
        <script type="text/javascript" src="/lib/angular-resource/angular-resource.min.js"></script>
    </head>
    <body ng-app="Database" ng-Controller="DashboardController">
        <form id="job" action="/api/jobs" method="post">
            Job Number: <input type="text" name="JOB_NUMBER"><br>
            Job Name: <input type="text" name="JOB_NAME"><br>
            Customer Name: <input type="text" name="CUSTOMER_NAME"><br>
            Customer Phone: <input type="text" name="CUSTOMER_PHONE"><br>
            Customer Email: <input type="text" name="CUSTOMER_EMAIL"><br>
            <input type="submit" value="Submit">
        </form>
        <br>
        <form id="emp" action="/api/emps" method="post">
            Employee Name: <input type="text" name="EMP_NAME"><br>
            Employee Phone: <input type="text" name="EMP_PHONE"><br>
            Employee Email: <input type="text" name="EMP_EMAIL"><br>
            <input type="submit" value="Submit">
        </form>
        <form id="labor" ng-submit="laborSubmit()" method="post">
            Job Number: <select ng-options="job._id as job.JOB_NUMBER for job in jobs" ng-model="select.JOB_ID"></select><br>
            Employee: <select ng-options="emp._id as emp.EMP_NAME for emp in emps" ng-model="select.EMP_ID"></select><br>
            Date: <input type="date" name="DATE" ng-model="select.DATE"><br>
            Start Time: <input type="time" name="TIME_START" ng-model="select.TIME_START"><br>
            Stop Time: <input type="time" name="TIME_END" ng-model="select.TIME_END"><br>
            Trade: <select ng-options="trade as trade.TRADE_NAME for trade in trades" ng-model="focustrade"></select><br>
            Work: <select ng-options="work._id as work.WORK_NAME for work in focustrade.WORKS" ng-model="select.SUBCATEGORY"></select><br>
            Description: <input type="text" name="DESCRIPTION" ng-model="select.DESCRIPTION"><br>
            <input type="submit" value="Submit">
        </form>
        <form id="travel" action="/api/travel" method="post">
            Job Start: <select ng-options="job._id as job.JOB_NUMBER for job in jobs" ng-model="select.JOB_ID_START"></select><br>
            Job End: <select ng-options="job._id as job.JOB_NUMBER for job in jobs" ng-model="select.JOB_ID_END"></select><br>
            Location Start: <input type="text" name="LOC_START"><br>
            Location End: <input type="text" name="LOC_END"><br>
            Employee: <select ng-options="emp._id as emp.EMP_NAME for emp in emps" ng-model="select.EMP_ID"></select><br>
            Vehicle: <select ng-options="vehicle._id as vehicle.VEH_NAME for vehicle in vehicles" ng-model="select.VEH_ID"></select><br>
            Start Time: <input type="time" name="TIME_START" ng-model="select.TIME_START"><br>
            Stop Time: <input type="time" name="TIME_END" ng-model="select.TIME_END"><br>
            <input type="submit" value="Submit">
        </form>
