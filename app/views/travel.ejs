<!DOCTYPE html>
<html>
    <head>
        <title>Travel - Sound Sport Surfaces</title>

        <link rel="stylesheet" href="/public/css/tables.css">

        <script type="text/javascript" src="/lib/angular/angular.js"></script>
        <script type="text/javascript" src="/lib/angular-resource/angular-resource.min.js"></script>
        <script type="text/javascript" src="/lib/angular-route/angular-route.min.js"></script>
        <script type="text/javascript" src="/lib/moment/moment.js"></script>
    </head>
    <body ng-app="Database" ng-controller="TravelController">
        <headtabs></headtabs>
        Job <select type="text" ng-options="job._id as job.JOB_NUMBER for job in jobs" ng-model="focus.job" name="job"></select>
        Employee: <select type="text" ng-options="emp._id as emp.EMP_NAME for emp in employees" ng-model="focus.emp" name="emp"></select>
        Vehicle: <select type="text" ng-options="vehicle._id as vehicle.VEHICLE_NAME for vehicle in vehicles" ng-model="focus.vehicle" name="vehicle"></select>
        From <input type="date" ng-model="focus.time_start" name="date_start"> 
        to <input type="date" ng-model="focus.time_end" name="date_end">
        {{ focus }}
        <table class="data">
            <tr ng-repeat="trip in trips | jobfilter : focus.job | filter : {EMP_ID: {_id: focus.emp }} | filter : {VEHICLE_ID: {_id: focus.vehicle}} | daterange : focus.time_start : focus.time_end | orderBy:'-TIME_START' as filtered">
                <td>{{ trip.JOB_ID_START.JOB_NUMBER || trip.LOC_START_ADDR }}</td>
                <td>{{ trip.JOB_ID_END.JOB_NUMBER || trip.LOC_END_ADDR }}</td>
                <td>{{ trip.EMP_ID.EMP_NAME }}</td>
                <td>{{ trip.VEHICLE_ID.VEHICLE_NAME }}</td>
                <td>{{ trip.TIME_START | date : 'shortDate' }} {{ trip.TIME_START | date : 'hh:mm' }}</td>
                <td>{{ trip.TIME_END | date : 'shortDate' }} {{ trip.TIME_END | date : 'hh:mm' }}</td>
                <td>{{ trip.MILES }}</td>
                <td>{{ trip.HOURS }}</td>
            </tr>
            <tr ng-show="filtered.length">
                <td>Miles: {{ sumMiles(filtered || []) }}</td>
                <td>Hours: {{ sumHours(filtered || []) }}</td>
            </tr>
        </table>

        <!-- application -->
        <script type="text/javascript" src="/public/js/Services.js"></script>
        <script type="text/javascript" src="/public/js/Database.js"></script>

        <!-- filters -->
        <script type="text/javascript" src="/public/js/filters/daterange.filters.client.js"></script>
        <script type="text/javascript" src="/public/js/filters/jobfilter.filters.client.js"></script>

        <!-- services -->
        <script type="text/javascript" src="/public/js/services/job.service.js"></script>

        <!-- controllers -->
        <script type="text/javascript" src="/public/js/controllers/travel.client.controllers.js"></script>

        <!-- directives -->
        <script type="text/javascript" src="/public/js/directives/headtabs.client.directives.js"></script>
    </body>
</html>

